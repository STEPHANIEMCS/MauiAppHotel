             Title="Detalhes da Hospedagem">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label x:Name="lbl_suite" FontAttributes="Bold" FontSize="Medium"/>
        <Label x:Name="lbl_adultos" />
        <Label x:Name="lbl_criancas" />
        <Label x:Name="lbl_checkin" />
        <Label x:Name="lbl_checkout" />
